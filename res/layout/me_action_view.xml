<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/me_action_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shadow_big">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_centerVertical="true"
         android:orientation="vertical" >

         <TextView
             android:id="@+id/me_action_txt"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:text="@string/me_action_txt"
             android:textAppearance="?android:attr/textAppearanceMedium"
             android:textColor="@color/game_sidecool_chip_txt_color"
             android:textSize="@dimen/me_action_txt_size" />

         <Button
             android:id="@+id/me_action_confirm_btn"
             android:layout_width="@dimen/me_action_confirm_img_width"
             android:layout_height="@dimen/me_action_confirm_img_height"
             android:layout_gravity="center"
             android:background="@drawable/btn_create_room"
             android:text="确定"
             android:textColor="@color/white"
             android:textSize="@dimen/me_action_confirm_btn_txt_size" />
     </LinearLayout>

</RelativeLayout>
