<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#55000000" >

    <TextView
        android:id="@+id/person_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/person_state"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="14dip" />

    <ImageButton
        android:id="@+id/person_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/person_title"
        android:background="#00000000"
        android:src="@drawable/img_player_picture1"
        android:padding="5dp" />

    <TextView
        android:id="@+id/person_current_money"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/person_image"
        android:layout_centerHorizontal="true"
        android:text="10000"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="10dip" />

</RelativeLayout>
