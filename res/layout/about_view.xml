<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/about_layout"
        android:layout_width="@dimen/setting_bg_width"
        android:layout_height="@dimen/setting_bg_height"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:background="@drawable/setting_bg" >

        <TextView
            android:id="@+id/about_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/about_title_txt_margintop"
            android:layout_marginBottom="@dimen/about_title_txt_marginbottom"
            android:text="关于"
            android:textColor="@color/about_color"
            android:textSize="@dimen/about_title_txt_size" />

        <ImageView
            android:layout_width="@dimen/about_bg_width" 
            android:layout_height="1px"
            android:layout_gravity="center"
            android:background="@color/about_color"
            />

        <TextView
            android:id="@+id/about_content_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_content1"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/about_centent_txt_margintop"
            android:gravity="center"
            android:textSize="@dimen/about_content_txt_size"
            android:textColor="@color/about_color" />
        
         <TextView
            android:id="@+id/about_content_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_content2"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/about_content_txt_size"
            android:textColor="@color/about_color" />

    </LinearLayout>

</RelativeLayout>
