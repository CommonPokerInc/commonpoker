<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_background" >

    <TextView
        android:id="@+id/player_current_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/player_current_rank_star"
        android:text="@string/player_current_rank" />
    
    <TextView
        android:id="@+id/player_current_rank_til"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:text="@string/player_current_rank_til" />
    <ImageView
        android:id="@+id/player_current_rank_star"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/player_current_rank_til"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/img_rank_1">
        
    </ImageView>

    <ImageButton
        android:id="@+id/follow"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/add"
        android:background="@drawable/img_follow_btn" />

    <ImageButton
        android:id="@+id/quit"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/follow"
        android:background="@drawable/img_quit_btn" />

    <RelativeLayout
        android:id="@+id/desk_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/follow"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/reback"
        android:layout_marginBottom="5dp"
        android:background="@drawable/img_desk" >

        <com.poker.common.activity.RightSeatView
            android:id="@+id/seat_five"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/player_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp" >
        </com.poker.common.activity.RightSeatView>

        <com.poker.common.activity.LeftSeatView
            android:id="@+id/seat_two"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/player_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp" >
        </com.poker.common.activity.LeftSeatView>

        <com.poker.common.activity.RightSeatView
            android:id="@+id/seat_three"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/player_height"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/seat_five" >
        </com.poker.common.activity.RightSeatView>

        <com.poker.common.activity.LeftSeatView
            android:id="@+id/seat_four"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/player_height"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@+id/seat_two" >
        </com.poker.common.activity.LeftSeatView>

        <com.poker.common.activity.RightSeatView
            android:id="@+id/seat_one"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/player_height"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/seat_five" >
        </com.poker.common.activity.RightSeatView>

        <com.poker.common.activity.LeftSeatView
            android:id="@+id/seat_six"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/player_height"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@+id/seat_two" >
        </com.poker.common.activity.LeftSeatView>

        <LinearLayout
            android:id="@+id/pokers_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/seat_five"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/poker1"
                android:layout_width="@dimen/public_poker_width"
                android:layout_height="@dimen/public_poker_height"
                android:layout_marginLeft="7dp"
                android:padding="@dimen/public_poker_padding"
                android:src="@drawable/diamond10" />

            <ImageView
                android:id="@+id/poker2"
                android:layout_width="@dimen/public_poker_width"
                android:layout_height="@dimen/public_poker_height"
                android:layout_marginLeft="7dp"
                android:padding="@dimen/public_poker_padding"
                android:src="@drawable/diamond10" />

            <ImageView
                android:id="@+id/poker3"
                android:layout_width="@dimen/public_poker_width"
                android:layout_height="@dimen/public_poker_height"
                android:layout_marginLeft="7dp"
                android:padding="@dimen/public_poker_padding"
                android:src="@drawable/diamond10" />

            <ImageView
                android:id="@+id/poker4"
                android:layout_width="@dimen/public_poker_width"
                android:layout_height="@dimen/public_poker_height"
                android:layout_marginLeft="7dp"
                android:padding="@dimen/public_poker_padding"
                android:src="@drawable/diamond10" />

            <ImageView
                android:id="@+id/poker5"
                android:layout_width="@dimen/public_poker_width"
                android:layout_height="@dimen/public_poker_height"
                android:layout_marginLeft="7dp"
                android:padding="@dimen/public_poker_padding"
                android:src="@drawable/diamond10" />
        </LinearLayout>

    </RelativeLayout>

    <ImageButton
        android:id="@+id/reback"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/player_current_rank"
        android:layout_marginLeft="13dp"
        android:background="@drawable/img_back_btn" />

    <ImageButton
        android:id="@+id/tips"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:background="@drawable/img_tips_btn" />

    <ImageButton
        android:id="@+id/add"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/player_current_rank_til"
        android:background="@drawable/img_add_btn" />

</RelativeLayout>