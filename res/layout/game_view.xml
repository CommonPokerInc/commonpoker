<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/game_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.poker.common.custom.MeView
        android:id="@+id/game_me_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:rotation="180" >
    </com.poker.common.custom.MeView>

    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/game_bottom_bg"
        android:orientation="vertical" >

  <LinearLayout
        android:id="@+id/game_poker_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/game_poker_layout_margintop"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/game_pokers_img1"
            android:layout_width="@dimen/game_pokers_img_width"
            android:layout_height="@dimen/game_pokers_img_height"
            android:src="@drawable/club5" />

        <ImageView
            android:id="@+id/game_pokers_img2"
            android:layout_width="@dimen/game_pokers_img_width"
            android:layout_height="@dimen/game_pokers_img_height"
            android:layout_marginLeft="@dimen/game_pokers_img_marginleft"
            android:src="@drawable/club4" />

        <ImageView
            android:id="@+id/game_pokers_img3"
            android:layout_width="@dimen/game_pokers_img_width"
            android:layout_height="@dimen/game_pokers_img_height"
            android:layout_marginLeft="@dimen/game_pokers_img_marginleft"
            android:src="@drawable/club3" />

        <ImageView
            android:id="@+id/game_pokers_img4"
            android:layout_width="@dimen/game_pokers_img_width"
            android:layout_height="@dimen/game_pokers_img_height"
            android:layout_marginLeft="@dimen/game_pokers_img_marginleft"
            android:src="@drawable/club8" />

        <ImageView
            android:id="@+id/game_pokers_img5"
            android:layout_width="@dimen/game_pokers_img_width"
            android:layout_height="@dimen/game_pokers_img_height"
            android:layout_marginLeft="@dimen/game_pokers_img_marginleft"
            android:src="@drawable/club6" />

        <ImageView
            android:id="@+id/game_mypoker_img1"
            android:layout_width="@dimen/game_pokers_img_width"
            android:layout_height="@dimen/game_pokers_img_height"
            android:layout_marginLeft="@dimen/game_mypoker_img_marginleft"
            android:src="@drawable/img_poker_back" />

        <ImageView
            android:id="@+id/game_mypoker_img2"
            android:layout_width="@dimen/game_pokers_img_width"
            android:layout_height="@dimen/game_pokers_img_height"
            android:layout_marginLeft="@dimen/game_pokers_img_marginleft"
            android:src="@drawable/img_poker_back" />

        <TextView
            android:id="@+id/game_mypoker_type_txt"
            android:layout_width="@dimen/game_mypoker_type_txt_width"
            android:layout_height="@dimen/game_mypoker_type_txt_height"
            android:layout_marginLeft="@dimen/game_pokers_img_marginleft"
            android:layout_marginTop="@dimen/game_mypoker_type_txt_margintop"
            android:background="@drawable/game_my_cards"
            android:singleLine="true"
            android:gravity="center"
            android:text="@string/game_mypoker_type_txt"
            android:textColor="@color/white"
            android:textSize="@dimen/game_mypoker_type_txt_size" />

    </LinearLayout>
    
    <RelativeLayout 
        android:id="@+id/game_cool_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/game_cool_layout_height"
        android:layout_marginTop="@dimen/game_cool_layout_marintop"
        android:layout_marginLeft="@dimen/game_cool_layout_marginleft"
        android:layout_marginRight="@dimen/game_cool_layout_marginright"
        android:layout_gravity="center"
        >

        <ImageView
            android:id="@+id/game_back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/game_exit_btn" />
        
        <ImageView 
            android:id="@+id/game_help_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/game_help_btn"/>
        
    </RelativeLayout>
    
    </LinearLayout>

</LinearLayout>