<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/game_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<include 
    android:id="@+id/game_waiting_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    layout="@layout/activity_waiting"
    android:visibility="invisible"
    />

<RelativeLayout 
    android:id="@+id/game_view_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    >

    <include 
        layout="@layout/win_view"
        />
    
        <RelativeLayout
        android:id="@+id/game_me_view_layout"    
        android:background="#46537b"
        android:layout_width="match_parent"
        android:layout_height="@dimen/game_me_view_layout_height"
        android:visibility="visible"
        >
	<DigitalClock
        android:id="@+id/digitalClock1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:maxLength="5"
        android:text="DigitalClock" />
            
    <com.poker.common.custom.MeView
        android:id="@+id/game_me_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/game_me_view_margintop"
        android:rotation="180" >
    </com.poker.common.custom.MeView>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/game_me_view"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/digitalClock1"
        android:text="Button" />

    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/game_me_view_layout"
        android:orientation="vertical" >
    
        <ImageView 
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/game_bottom_bg"
        android:scaleType="fitXY"
            />
    
    <RelativeLayout
        android:id="@+id/game_cool_layout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_below="@+id/game_poker_layout"
        android:layout_marginLeft="@dimen/game_cool_layout_marginleft"
        android:layout_marginRight="@dimen/game_cool_layout_marginright"
        android:layout_marginTop="@dimen/game_cool_layout_marintop" >

        <ImageView
            android:id="@+id/game_back_img"
            android:layout_width="@dimen/game_back_img_width"
            android:layout_height="@dimen/game_back_img_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/game_back_img_marginbottom"
            android:layout_marginLeft="@dimen/game_back_img_marginleft"
            android:src="@drawable/game_exit_btn" />
        
        <ImageView 
            android:id="@+id/game_help_img"
            android:layout_width="@dimen/game_back_img_width"
            android:layout_height="@dimen/game_back_img_height"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/game_help_img_marginright"
            android:layout_marginBottom="@dimen/game_back_img_marginbottom"
            android:src="@drawable/game_help_btn"/>

        <RelativeLayout
            android:id="@+id/game_maincool_layout"
            android:layout_width="@dimen/game_maincool_layout_width"
            android:layout_height="@dimen/game_maincool_layout_height"
            android:layout_alignBottom="@+id/game_back_img"
            android:layout_marginLeft="@dimen/game_maincool_layout_marginleft"
            android:layout_toRightOf="@+id/game_back_img"
            android:background="@drawable/chip_plate_l" >

            <ImageView
                android:id="@+id/game_maincool_chip_img"
                android:layout_width="@dimen/game_maincool_chip_img_width"
                android:layout_height="@dimen/game_maincool_chip_img_height"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/game_maincool_chip_img_marginleft"
                android:src="@drawable/chip_m" />

            <TextView
                android:id="@+id/game_maincool_chip_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/game_maincool_chip_txt_marginleft"
                android:layout_toRightOf="@+id/game_maincool_chip_img"
                android:text="@string/game_maincool_chip_txt"
                android:textColor="@color/game_maincool_chip_txt_color"
                android:textSize="@dimen/game_maincool_chip_txt_size" />
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/game_sidecool_layout1"
            android:layout_width="@dimen/game_sidecool_layout_width"
            android:layout_height="@dimen/game_sidecool_layout_height"
            android:layout_alignBottom="@+id/game_back_img"
            android:layout_marginLeft="@dimen/game_sidecool_layout_marginleft"
            android:layout_toRightOf="@+id/game_maincool_layout"
            android:background="@drawable/chip_plate_l" >

            <ImageView
                android:id="@+id/game_sizecool_chip_img1"
                android:layout_width="@dimen/game_sidecool_chip_img_width"
                android:layout_height="@dimen/game_sidecool_chip_img_height"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/game_sidecool_chip_img_marginleft"
                android:src="@drawable/chip_s" />

            <TextView
                android:id="@+id/game_sidecool_chip_txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/game_sidecool_chip_txt_marginleft"
                android:layout_toRightOf="@+id/game_sizecool_chip_img1"
                android:text="@string/game_sidecool_chip_txt"
                android:textColor="@color/game_sidecool_chip_txt_color"
                android:textSize="@dimen/game_sidecool_chip_txt_size" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/game_sidecool_layout2"
            android:layout_width="@dimen/game_sidecool_layout_width"
            android:layout_height="@dimen/game_sidecool_layout_height"
            android:layout_alignBottom="@+id/game_back_img"
            android:layout_marginLeft="@dimen/game_sidecool_layout_marginleft"
            android:layout_toRightOf="@+id/game_sidecool_layout1"
            android:background="@drawable/chip_plate_l" >

            <ImageView
                android:id="@+id/game_sizecool_chip_img2"
                android:layout_width="@dimen/game_sidecool_chip_img_width"
                android:layout_height="@dimen/game_sidecool_chip_img_height"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/game_sidecool_chip_img_marginleft"
                android:src="@drawable/chip_s" />

            <TextView
                android:id="@+id/game_sidecool_chip_txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/game_sidecool_chip_txt_marginleft"
                android:layout_toRightOf="@+id/game_sizecool_chip_img2"
                android:text="@string/game_sidecool_chip_txt"
                android:textColor="@color/game_sidecool_chip_txt_color"
                android:textSize="@dimen/game_sidecool_chip_txt_size" />
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/game_sidecool_layout3"
            android:layout_width="@dimen/game_sidecool_layout_width"
            android:layout_height="@dimen/game_sidecool_layout_height"
            android:layout_alignBottom="@+id/game_back_img"
            android:layout_marginLeft="@dimen/game_sidecool_layout_marginleft"
            android:layout_toRightOf="@+id/game_sidecool_layout2"
            android:background="@drawable/chip_plate_l" >

            <ImageView
                android:id="@+id/game_sizecool_chip_img3"
                android:layout_width="@dimen/game_sidecool_chip_img_width"
                android:layout_height="@dimen/game_sidecool_chip_img_height"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/game_sidecool_chip_img_marginleft"
                android:src="@drawable/chip_s" />

            <TextView
                android:id="@+id/game_sidecool_chip_txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/game_sidecool_chip_txt_marginleft"
                android:layout_toRightOf="@+id/game_sizecool_chip_img3"
                android:text="@string/game_sidecool_chip_txt"
                android:textColor="@color/game_sidecool_chip_txt_color"
                android:textSize="@dimen/game_sidecool_chip_txt_size" />
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/game_sidecool_layout4"
            android:layout_width="@dimen/game_sidecool_layout_width"
            android:layout_height="@dimen/game_sidecool_layout_height"
            android:layout_alignBottom="@+id/game_back_img"
            android:layout_marginLeft="@dimen/game_sidecool_layout_marginleft"
            android:layout_toRightOf="@+id/game_sidecool_layout3"
            android:background="@drawable/chip_plate_l" >

            <ImageView
                android:id="@+id/game_sizecool_chip_img4"
                android:layout_width="@dimen/game_sidecool_chip_img_width"
                android:layout_height="@dimen/game_sidecool_chip_img_height"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/game_sidecool_chip_img_marginleft"
                android:src="@drawable/chip_s" />

            <TextView
                android:id="@+id/game_sidecool_chip_txt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/game_sidecool_chip_txt_marginleft"
                android:layout_toRightOf="@+id/game_sizecool_chip_img4"
                android:text="@string/game_sidecool_chip_txt"
                android:textColor="@color/game_sidecool_chip_txt_color"
                android:textSize="@dimen/game_sidecool_chip_txt_size" />
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/game_sidecool_layout5"
            android:layout_width="@dimen/game_sidecool_layout_width"
            android:layout_height="@dimen/game_sidecool_layout_height"
            android:layout_alignBottom="@+id/game_back_img"
            android:layout_marginLeft="@dimen/game_sidecool_layout_marginleft"
            android:layout_toRightOf="@+id/game_sidecool_layout4"
            android:background="@drawable/chip_plate_l" >

            <ImageView
                android:id="@+id/game_sizecool_chip_img5"
                android:layout_width="@dimen/game_sidecool_chip_img_width"
                android:layout_height="@dimen/game_sidecool_chip_img_height"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/game_sidecool_chip_img_marginleft"
                android:src="@drawable/chip_s" />

            <TextView
                android:id="@+id/game_sidecool_chip_txt5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/game_sidecool_chip_txt_marginleft"
                android:layout_toRightOf="@+id/game_sizecool_chip_img5"
                android:text="@string/game_sidecool_chip_txt"
                android:textColor="@color/game_sidecool_chip_txt_color"
                android:textSize="@dimen/game_sidecool_chip_txt_size" />
        </RelativeLayout>
        
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/game_poker_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/game_poker_layout_margintop"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/game_pokers_img1"
            android:layout_width="@dimen/game_pokers_img_width"
            android:layout_height="@dimen/game_pokers_img_height"
            android:src="@drawable/club5" />

        <ImageView
            android:id="@+id/game_pokers_img2"
            android:layout_width="@dimen/game_pokers_img_width"
            android:layout_height="@dimen/game_pokers_img_height"
            android:layout_marginLeft="@dimen/game_pokers_img_marginleft"
            android:src="@drawable/club4" />

        <ImageView
            android:id="@+id/game_pokers_img3"
            android:layout_width="@dimen/game_pokers_img_width"
            android:layout_height="@dimen/game_pokers_img_height"
            android:layout_marginLeft="@dimen/game_pokers_img_marginleft"
            android:src="@drawable/club3" />

        <ImageView
            android:id="@+id/game_pokers_img4"
            android:layout_width="@dimen/game_pokers_img_width"
            android:layout_height="@dimen/game_pokers_img_height"
            android:layout_marginLeft="@dimen/game_pokers_img_marginleft"
            android:src="@drawable/club8" />

        <ImageView
            android:id="@+id/game_pokers_img5"
            android:layout_width="@dimen/game_pokers_img_width"
            android:layout_height="@dimen/game_pokers_img_height"
            android:layout_marginLeft="@dimen/game_pokers_img_marginleft"
            android:src="@drawable/club6" />

        <ImageView
            android:id="@+id/game_mypoker_img1"
            android:layout_width="@dimen/game_pokers_img_width"
            android:layout_height="@dimen/game_pokers_img_height"
            android:layout_marginLeft="@dimen/game_mypoker_img_marginleft"
            android:src="@drawable/img_poker_back" />

        <ImageView
            android:id="@+id/game_mypoker_img2"
            android:layout_width="@dimen/game_pokers_img_width"
            android:layout_height="@dimen/game_pokers_img_height"
            android:layout_marginLeft="@dimen/game_pokers_img_marginleft"
            android:src="@drawable/img_poker_back" />

        <TextView
            android:id="@+id/game_mypoker_type_txt"
            android:layout_width="@dimen/game_mypoker_type_txt_width"
            android:layout_height="@dimen/game_mypoker_type_txt_height"
            android:layout_marginLeft="@dimen/game_pokers_img_marginleft"
            android:layout_marginTop="@dimen/game_mypoker_type_txt_margintop"
            android:background="@drawable/game_my_cards"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/game_mypoker_type_txt"
            android:textColor="@color/white"
            android:textSize="@dimen/game_mypoker_type_txt_size" />
    </LinearLayout>
    
    </RelativeLayout>
    
     <FrameLayout
        android:id="@+id/new_bet_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:paddingBottom="25dip"
        android:layout_marginTop="20dp"
        android:background="@drawable/add_plate"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/new_bet_null"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_gravity="bottom|center_horizontal"
            android:src="@drawable/add_zero"/>

        <ImageView
            android:id="@+id/new_bet_full"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="bottom|center_horizontal"
            android:src="@drawable/add_full" 
            android:scaleType="matrix" />

    </FrameLayout>
    </RelativeLayout>
    
      <ImageView 
        android:id="@+id/isMeImageView"
   		android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:src="@drawable/img_in_me"
    	android:scaleType="fitXY"
    	android:visibility="invisible"
        >
  	  </ImageView>
  	  
          <ImageView
        android:id="@+id/help_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/game_help" 
        android:visibility="invisible"/>

</RelativeLayout>