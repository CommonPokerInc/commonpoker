<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/player_action_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/player_action_view_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#000000"
        android:alpha="0.8"
        android:layout_centerVertical="true" >

        <RelativeLayout
            android:id="@+id/player_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/player_layouy_marginbottom"
            android:layout_marginLeft="@dimen/player_layout_marginleft"
            android:layout_marginRight="@dimen/player_layout_marginright"
            android:layout_marginTop="@dimen/player_layouy_margintop" >

            <ImageView
                android:id="@+id/player_img"
                android:layout_width="@dimen/player_img_width"
                android:layout_height="@dimen/player_img_height"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/img_player_picture1" />

            <TextView
                android:id="@+id/player_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/player_img"
                android:layout_centerHorizontal="true"
                android:text="@string/player_name"
                android:textColor="@color/white"
                android:textSize="@dimen/player_name_size" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/player_action_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/player_layout"
            android:layout_marginTop="@dimen/player_action_layout_margintop"
            android:layout_toRightOf="@+id/player_layout" >
<LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
            <TextView
                android:id="@+id/player_action_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/player_action_txt"
                android:singleLine="true"
                android:layout_gravity="center"
                android:textColor="@color/player_action_txt_color"
                android:textSize="@dimen/player_action_txt_size" />

   <RelativeLayout 
        android:id="@+id/bet_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        >
     <ImageView
        android:id="@+id/bet_img"
        android:layout_width="@dimen/bet_img_width"
        android:layout_height="@dimen/bet_img_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/chip_plate_l" />
	
    <TextView
        android:id="@+id/bet_txt"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/bet_icon"
        android:layout_marginLeft="@dimen/bet_txt_marginleft"
        android:layout_centerVertical="true"
        android:text="@string/bet_txt"
        android:textColor="@color/game_sidecool_chip_txt_color"
        android:textSize="@dimen/bet_txt" />

    <ImageView
        android:id="@+id/bet_icon"
        android:layout_width="@dimen/bet_icon_width"
        android:layout_height="@dimen/bet_icon_height"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/bet_icon_marginleft"
        android:src="@drawable/chip_l" />

    </RelativeLayout>
    
   </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>