<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/player_action_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:background="@color/wheat">

    <RelativeLayout
        android:id="@+id/player_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginTop="@dimen/player_layouy_margintop"
        android:layout_marginLeft="@dimen/player_layout_marginleft"
        android:layout_marginRight="@dimen/player_layout_marginright"
        android:layout_marginBottom="@dimen/player_layouy_marginbottom">

        <ImageView
            android:id="@+id/player_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/img_player_picture1" />

        <TextView
            android:id="@+id/player_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/player_img"
            android:layout_centerHorizontal="true"
            android:text="@string/player_name"
            android:textColor="@color/white"
            android:textSize="@dimen/player_name_size" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/player_action_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/player_layout"
        android:layout_toRightOf="@+id/player_layout" 
        android:layout_marginTop="@dimen/player_action_layout_margintop">

        <TextView
            android:id="@+id/player_action_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/player_action_txt"
            android:textSize="@dimen/player_action_txt_size" />

        <com.poker.common.custom.BetView
            android:id="@+id/player_bet_view"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/player_action_txt" >
        </com.poker.common.custom.BetView>
    </RelativeLayout>

</RelativeLayout>