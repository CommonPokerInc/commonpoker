<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2b2937" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >
            <ImageView android:id="@+id/img_tip1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/tip_1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"/>
            <TextView android:id="@+id/txt_tips1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邀请好友打开手机wifi\n连接到无线网络"
                android:gravity="center"
                android:textColor="#a7afc4"
                android:textSize="18sp"
                android:layout_below="@+id/img_tip1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>
            <TextView android:layout_below="@+id/txt_tips1"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="JoinMe"
                android:textSize="15sp"
                android:background="@drawable/bg_input_send"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >
			<ImageView android:id="@+id/img_tip2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/tip_2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"/>
			<TextView android:id="@+id/txt_tips2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扫描二维码"
                android:gravity="center"
                android:textColor="#a7afc4"
                android:textSize="18sp"
                android:layout_below="@+id/img_tip2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>
            <ImageView
                android:id="@+id/img_qr"
                android:layout_below="@+id/txt_tips2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
		<TextView android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="给朋友装安装包"
		    android:layout_alignParentTop="true"
		    android:layout_centerHorizontal="true"
		    android:layout_marginTop="20dp"
		    android:textSize="30sp"
		    android:textColor="@color/white"/>
        <ImageButton
            android:id="@+id/send_game_back_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/back_margin_left"
            android:layout_marginTop="@dimen/back_margin_top"
            android:background="@drawable/img_back_btn" />
        <ImageView 
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/arrow"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</FrameLayout>