<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="cardTypeAnimation" parent="android:Animation">  
        <item name="android:windowEnterAnimation">@anim/pop_in</item>  
        <item name="android:windowExitAnimation">@anim/pop_out</item>  
    </style>
    
      <style name="settingAnimation" parent="android:Animation">  
        <item name="android:windowEnterAnimation">@anim/setting_in</item>  
        <item name="android:windowExitAnimation">@anim/setting_out</item>  
    </style>

    
   
<style name="setting_items_checkbox" parent="@android:style/Widget.CompoundButton.CheckBox"> 
        <item name="android:button">@drawable/setting_items_checkbox</item> 
        <item name="android:paddingLeft">25.0dip</item>
        <item name="android:maxHeight">10.0dip</item>
    </style>
    
</resources>
